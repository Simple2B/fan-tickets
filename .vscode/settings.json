{
  "python.terminal.activateEnvironment": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.venv/*/**": true
  },
  "cSpell.words": [
    "amarelo",
    "fastapi",
    "flowbite",
    "Grotesk",
    "ilike",
    "jsonify",
    "motivos",
    "pydantic",
    "pytest",
    "pytz",
    "sqlalchemy",
    "tailwindcss",
    "werkzeug",
    "wsgi",
    "wtforms"
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false
}
