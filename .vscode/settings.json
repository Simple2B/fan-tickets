{
  "python.terminal.activateEnvironment": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/*/**": true,
    "**/.venv/*/**": true
  },
  "cSpell.words": [
    "amarelo",
    "Antifraud",
    "autohide",
    "Cadastro",
    "CNPJ",
    "conta",
    "Continuar",
    "Crie",
    "easepick",
    "endmacro",
    "endset",
    "fastapi",
    "Fazer",
    "flowbite",
    "Grotesk",
    "htmx",
    "ilike",
    "jsonify",
    "motivos",
    "Notificações",
    "ondelete",
    "Pagar",
    "pagarme",
    "Pagarme",
    "psycopg",
    "pydantic",
    "pytest",
    "pytz",
    "Senha",
    "sqlalchemy",
    "swiper",
    "tailwindcss",
    "usuário",
    "viewonly",
    "werkzeug",
    "wsgi",
    "wtforms"
  ],
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "mypy.dmypyExecutable": "${workspaceFolder}/.venv/bin/dmypy",
  "[python]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "charliermarsh.ruff"
  }
}